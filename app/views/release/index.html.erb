<div id="about" class="col-sm-12 col-md-12">
  <div class="release_title">
    <h2>Homosaurus Releases</h2>
    <% if @releases.first.present? %>
    <h3>Last Updated: <%= @releases.first.release_date %></h3>
    <% end %>
  </div>
