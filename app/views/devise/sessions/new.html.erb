<% @page_title = "Login -  Homosaurus" %>
<div id="static_holder" class="container-fluid contact-us">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-lg-12 col-md-12 static_holder_content_container">
      <div id="static_holder_content" class="static_holder_content">
        <h2>Log in</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>

          <div class="form-group">
            <label class="col-sm-3 control-label">Email:</label>
            <div class="col-sm-6">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-3 control-label">Password:</label>
            <div class="col-sm-6">
              <%= f.password_field :password, autocomplete: "current-password", :class => 'form-control' %>
            </div>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form-group">
              <div class="col-sm-offset-3 col-sm-6 col-md-6">
                <div class="newsletter_checkbox pull-right">
                  Remember me on this computer? <%= check_box_tag(:remember_me, 'yes', false) %>
                </div>
              </div>
            </div>
          <% end %>

          <div class="form-group">
            <div class="col-sm-offset-3 col-sm-6 col-md-6">
              <%= f.submit "Log in", :class => 'btn btn-default pull-right', id: 'contact_submit' %>
            </div>
          </div>
        <% end %>

        Don't have an account? <strong><%= link_to "Sign up.", new_registration_path(resource_name) %></strong>
      </div>
    </div>
  </div>
</div>



