<h1><%= t("vocab.label") %></h1>
<% if current_user.present? && current_user.contributor? && request.original_url.include?('/v3') %>
  <h4><%= t("vocab.admin.actions") %></h4>
  <%= button_to t("vocab.admin.new_term"), vocabulary_term_new_path(vocab_id: "v3"), :method => "get", class: 'btn btn-primary', style:"float:left;" %>
  <%= button_to t("vocab.admin.show_visible"), vocabulary_index_path(vocab_id: "v3"), :method => "get", class: 'btn btn-primary', style:"float:left; margin-left:20px;", params: { display_mode: "visible" } %>
  <%= button_to t("vocab.admin.show_next"), vocabulary_index_path(vocab_id: "v3"), :method => "get", class: 'btn btn-primary', style:"float:left; margin-left:20px;", params: { display_mode: "pending" } %>
  <%= button_to t("vocab.admin.show_deleted"), vocabulary_index_path(vocab_id: "v3"), :method => "get", class: 'btn btn-primary', style:"float:left; margin-left:20px;", params: { display_mode: "deleted" } %>
  <%= button_to t("vocab.admin.show_redirects"), vocabulary_index_path(vocab_id: "v3"), :method => "get", class: 'btn btn-primary', style:"float:left; margin-left:20px;", params: { display_mode: "redirect" }  %>
  <div style="clear:both"></div>
<% end %>

<h4><%= t("download.formats") %></h4>
<ul>
  <li><%= link_to "N-Triples", request.original_url + '.nt'  %></li>
  <li><%= link_to "JSON-LD", request.original_url + '.jsonld' %></li>
  <li><%= link_to "TTL", request.original_url + '.ttl' %></li>
  <li><%= link_to "XML", request.original_url + '.xml' %></li>
</ul>

<h4><%= t("download.graphical_views") %></h4>
<% if request.original_url.include? '/v3' %>
  <ul>
    <li><%= link_to "Tree View", tree_path %></li>
    <li><%= link_to "Indented Bars View", indented_tree_path %></li>
  </ul>
<% end %>

<h4><%= t("vocab.current_terms") %> <%= I18n.locale %></h4>
<ul>
  <% @terms.each do |term| %>
      <li>
        <% if term.pref_label.blank? %>
          <%= link_to "(EMPTY)", vocabulary_show_path(vocab_id: term.vocabulary_identifier, :id => term.identifier) %>
        <% else %>
          <%= link_to term.pref_label_localized.data, vocabulary_show_path(vocab_id: term.vocabulary_identifier, :id => term.identifier) %>
          <% end %>
	<% if not term.translation_exists?(I18n.locale) %>
	  <span class="badge text-bg-danger"><%= t("misc.translation_needed") %></span>
	<% end %>
      </li>
  <% end %>
  <% @edited_terms.each do |pending| %>
    <% term = pending.reify %>
    <li>
      <% if term.pref_label.blank? %>
        <%= link_to "(EMPTY)", vocabulary_show_path(vocab_id: term.vocabulary_identifier, :id => term.identifier, pending_id: pending.id) %>
      <% else %>
        <%= link_to term.pref_label_localized.data, vocabulary_show_path(vocab_id: term.vocabulary_identifier, :id => term.identifier, pending_id: pending.id) %>
      <% end %>

    </li>
  <% end %>

</ul>

<p><br/><strong>Other Formats:</strong> <%= link_to "N-Triples", request.original_url + '.nt'  %>, <%= link_to "JSON-LD", request.original_url + '.jsonld' %>, <%= link_to "TTL", request.original_url + '.ttl' %>, <%= link_to "CSV (Split by Tabs only)", request.original_url + '.csv' %>, <%= link_to "XML", request.original_url + '.xml' %>
<p><br/><strong>Experimental Upcoming Formats With Language Labels:</strong> <%= link_to "N-Triples", request.original_url + '.ntV2'  %>, <%= link_to "JSON-LD", request.original_url + '.jsonldV2' %>, <%= link_to "TTL", request.original_url + '.ttlV2' %>


