<h1>Homosaurus Vocabulary Terms</h1>

<h4>Graphical Views</h4>
<% if request.original_url.include? '/v3' %>
  <ul>
    <li><%= link_to "Tree View", tree_path %></li>
    <li><%= link_to "Indented Bars View", indented_tree_path %></li>
  </ul>
<% end %>

<h4>Current Term List</h4>
<ul>
  <% @terms.each do |term| %>
      <li>
        <%= link_to term['prefLabel_tesim'].first, vocabs_v3_path(:id => term['id'].split('/').last) %>
      </li>
  <% end %>
</ul>

<p><br/><strong>Other Formats:</strong> <%= link_to "N-Triples", request.original_url + '.nt'  %>, <%= link_to "JSON-LD", request.original_url + '.jsonld' %>, <%= link_to "TTL", request.original_url + '.ttl' %>, <%= link_to "CSV", request.original_url + '.csv' %>

